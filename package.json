{
  "name": "smart-hire-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/database/connection/index.ts",
    "schema:drop": "npm run typeorm schema:drop",
    "m:generate": "npm run typeorm migration:generate ./src/database/migrations/%npm_config_name%",
    "m:run": "npm run typeorm migration:run",
    "m:revert": "npm run typeorm migration:revert",
    "m:fresh": "npm run typeorm schema:drop && npm run typeorm migration:run && npm run db:seed",
    "db:seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed -n ./src/config/ormconfig.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "6.0.0",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "8.0.5",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.2",
    "mustache": "4.2.0",
    "mysql2": "^3.14.1",
    "nodemailer": "7.0.3",
    "reflect-metadata": "^0.2.2",
    "tsconfig-paths": "4.2.0",
    "typeorm": "^0.3.23",
    "typeorm-seeding": "^1.6.1"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "2.8.18",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "1.4.12",
    "@types/mustache": "4.2.6",
    "@types/node": "^22.15.16",
    "@types/nodemailer": "6.4.17",
    "express": "^5.1.0",
    "nodemon": "^3.1.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
